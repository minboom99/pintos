{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "source",
            "type": "shell",
            "command": "source",
            "args": [
                "./activate"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build",
            "options": {
                "cwd": "${workspaceFolder}/threads"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/threads"
            },
            "problemMatcher": "$gcc",
            "group": "build",
            "dependsOn": [
                "source"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/utils/pintos",
            "args": [
                "--",
                "-q",
                "run",
                "${input:test_name}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            },
            "group": "build",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "run with gdb",
            "type": "shell",
            "command": "${workspaceFolder}/utils/pintos",
            "args": [
                "--gdb",
                "--",
                "-q",
                "run",
                "${input:test_name}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            },
            "group": "build",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "test_name",
            "description": "Test name",
            "type": "pickString",
            "options": [
                "alarm-multiple",
                "alarm-single",
                "alarm-multiple",
                "alarm-simultaneous",
                "alarm-priority",
                "alarm-zero",
                "alarm-negative",
                "priority-change",
                "priority-donate-one",
                "priority-donate-multiple",
                "priority-donate-multiple2",
                "priority-donate-nest",
                "priority-donate-sema",
                "priority-donate-lower",
                "priority-donate-chain",
                "priority-fifo",
                "priority-preempt",
                "priority-sema",
                "priority-condvar",
                "mlfqs-load-1",
                "mlfqs-load-60",
                "mlfqs-load-avg",
                "mlfqs-recent-1",
                "mlfqs-fair-2",
                "mlfqs-fair-20",
                "mlfqs-nice-2",
                "mlfqs-nice-10",
                "mlfqs-block",
            ],
            "default": "alarm-multiple"
        }
    ]
}